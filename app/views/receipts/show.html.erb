<%= content_for :title do %>
  <%= @receipt.description %> &ndash; <%= DateTime.now.to_formatted_s(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">

      <p class="panel-heading">
        <%= @receipt.total %>
      </p>

      <div class="panel-block">
        <%= @receipt.description %>
      </div>

      <div class="panel-block">
        <%= @receipt.date %>
      </div>

      <div class="panel-block">
        <%= @receipt.time %>
      </div>

    </nav>

    <div class="clomuns is-mobile">
      <div class="columns">
        <%= link_to "Edit this receipt", edit_receipt_path(@receipt), class: "button is-gray" %>
        <%= link_to "Back to receipts", receipts_path, class: "button is-gray" %>
        <%= link_to "Destroy this receipt", @receipt, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this receipt?'}, class: "button is-gray" %>
      </div>
    </div>

  </div>
</div>



